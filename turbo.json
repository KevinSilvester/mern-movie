{
   "$schema": "https://turbo.build/schema.json",
   "pipeline": {
      "build": {
         "dependsOn": ["lint:check", "format:check", "^build"],
         "outputs": ["dist"]
      },
      "lint:check": {},
      "lint:fix": {},
      "format:check": {},
      "format:fix": {},
      "dev": {
         "cache": false,
         "persistent": true
      },
      "clean": {
         "cache": false
      },
      "start": {
         "dependsOn": ["build"]
      }
   }
}
