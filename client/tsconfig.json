{
   "compilerOptions": {
      "target": "es2016",
      "useDefineForClassFields": true,
      "lib": [
         "DOM",
         "DOM.Iterable",
         "es5"
      ],
      "baseUrl": "src",
      "paths": {
         "@api/*": ["api/*"],
         "@assets/*": ["assets/*"],
         "@comp/*": ["components/*"],
         "@css/*": ["css/*"],
         "@interface/*": ["interface/*"],
         "@layout/*": ["layout/*"],
         "@pages/*": ["pages/*"],
         "@routes/*": ["routes/*"],
         "@store/*": ["store/*"],
         "@utils/*": ["utils/*"]
      },
      "allowJs": false,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "amd",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx"
   },
   "include": [
      "src"
   ]
}
