{
   "compilerOptions": {
      "target": "ES6",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["ES2021"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
   },
   "include": ["src/**/*"]
}